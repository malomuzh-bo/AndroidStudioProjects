<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1c1c1c"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textInput"
        android:textDirection="rtl"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:hint="0"
        android:inputType="number"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/textResult"
        android:textDirection="rtl"
        android:layout_width="match_parent"
        android:layout_below="@id/textInput"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="106dp"
        android:hint="0"
        android:textColor="#808080"
        android:inputType="number"
        android:textSize="24sp" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:columnCount="4"
        android:rowCount="5"
        android:id="@+id/buttonsGrid">

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_below="@+id/editTextResult"
            android:layout_marginTop="14dp"
            android:layout_weight="1"
            android:backgroundTint="#d4d4d2"
            android:onClick="onButtonClick"
            android:text="C"
            android:textColor="#1c1c1c"
            android:textSize="27dp" />

        <Button
            android:id="@+id/buttonPlusMinus"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_below="@+id/editTextResult"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/buttonClear"
            android:layout_weight="1"
            android:backgroundTint="#d4d4d2"
            android:onClick="onButtonClick"
            android:text="+/-"
            android:textColor="#1c1c1c"
            android:textSize="26dp" />

        <Button
            android:id="@+id/buttonPercent"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_below="@+id/editTextResult"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/buttonPlusMinus"
            android:layout_weight="1"
            android:backgroundTint="#d4d4d2"
            android:onClick="onButtonClick"
            android:text="%"
            android:textColor="#1c1c1c"
            android:textSize="30dp" />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_below="@+id/editTextResult"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/buttonPercent"
            android:layout_weight="1"
            android:backgroundTint="#FF9500"
            android:onClick="onButtonClick"
            android:text="รท"
            android:textColor="#1c1c1c"
            android:textSize="40dp" />


        <Button
            android:id="@+id/button7"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_below="@+id/buttonClear"
            android:layout_weight="1"
            android:backgroundTint="#505050"
            android:onClick="onButtonClick"
            android:text="7"
            android:textColor="#d4d4d2"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_below="@+id/buttonClear"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/button7"
            android:layout_weight="1"
            android:backgroundTint="#505050"
            android:onClick="onButtonClick"
            android:text="8"
            android:textColor="#d4d4d2"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_below="@+id/buttonClear"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/button8"
            android:layout_weight="1"
            android:backgroundTint="#505050"
            android:onClick="onButtonClick"
            android:text="9"
            android:textColor="#d4d4d2"
            android:textSize="30dp" />

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_below="@+id/buttonClear"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/button9"
            android:layout_weight="1"
            android:backgroundTint="#FF9500"
            android:onClick="onButtonClick"
            android:text="ร"
            android:textColor="#1c1c1c"
            android:textSize="40dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_below="@+id/button7"
            android:layout_weight="1"
            android:backgroundTint="#505050"
            android:onClick="onButtonClick"
            android:text="4"
            android:textColor="#d4d4d2"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_below="@+id/button8"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/button7"
            android:layout_weight="1"
            android:backgroundTint="#505050"
            android:onClick="onButtonClick"
            android:text="5"
            android:textColor="#d4d4d2"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_below="@+id/button9"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/button8"
            android:layout_weight="1"
            android:backgroundTint="#505050"
            android:onClick="onButtonClick"
            android:text="6"
            android:textColor="#d4d4d2"
            android:textSize="30dp" />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_below="@+id/buttonMultiply"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/button6"
            android:layout_weight="1"
            android:backgroundTint="#FF9500"
            android:onClick="onButtonClick"
            android:text="-"
            android:textColor="#1c1c1c"
            android:textSize="40dp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_below="@+id/button4"
            android:layout_weight="1"
            android:backgroundTint="#505050"
            android:onClick="onButtonClick"
            android:text="1"
            android:textColor="#d4d4d2"
            android:textSize="30dp" />


        <Button
            android:id="@+id/button2"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_below="@+id/button5"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/button7"
            android:layout_weight="1"
            android:backgroundTint="#505050"
            android:onClick="onButtonClick"
            android:text="2"
            android:textColor="#d4d4d2"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_below="@+id/button6"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/button8"
            android:layout_weight="1"
            android:backgroundTint="#505050"
            android:onClick="onButtonClick"
            android:text="3"
            android:textColor="#d4d4d2"
            android:textSize="30dp" />

        <Button
            android:id="@+id/buttonSum"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_below="@+id/buttonMinus"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/button6"
            android:layout_weight="1"
            android:backgroundTint="#FF9500"
            android:onClick="onButtonClick"
            android:text="+"
            android:textColor="#1c1c1c"
            android:textSize="35dp" />

        <Button
            android:id="@+id/button0"
            android:layout_width="170dp"
            android:layout_height="90dp"
            android:layout_columnSpan="2"
            android:layout_below="@+id/button1"
            android:layout_weight="1"
            android:backgroundTint="#505050"
            android:onClick="onButtonClick"
            android:paddingLeft="35dp"
            android:text="0"
            android:textAlignment="textStart"
            android:textColor="#d4d4d2"
            android:textSize="30dp" />

        <Button
            android:id="@+id/buttonComma"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_columnSpan="2"
            android:layout_below="@+id/button3"
            android:layout_weight="1"
            android:backgroundTint="#505050"
            android:onClick="onButtonClick"
            android:paddingLeft="35dp"
            android:text=","
            android:textColor="#d4d4d2"
            android:textSize="30dp" />
        <Button
            android:id="@+id/buttonEquals"
            android:onClick="onButtonClick"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_below="@+id/buttonSum"
            android:layout_column="3"
            android:layout_row="4"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/buttonComma"
            android:layout_weight="1"
            android:backgroundTint="#FF9500"
            android:text="="
            android:textColor="#1c1c1c"
            android:textSize="35dp" />
    </GridLayout>

</RelativeLayout>
